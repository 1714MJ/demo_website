<body>
  <h1>‚ôª Waste Segregation Identifier</h1>
  <div class="container">
    <!-- Text Search -->
    <input type="text" id="itemInput" placeholder="Enter a waste item (e.g., plastic bottle)">
    <br>
    <button onclick="identifyWaste()">üîç Check Item</button>
    <br><br>

    <!-- Image Upload -->
    <input type="file" id="imageInput" accept="image/*" onchange="previewImage(event)">
    <br>
    <button onclick="identifyFromImage()">üñº Identify Uploaded Image</button>
    <br><br>

    <!-- Capture Image from Camera -->
    <input type="file" id="cameraInput" accept="image/*" capture="environment" onchange="previewCameraImage(event)">
    <br>
    <button onclick="identifyFromCamera()">üì∑ Identify Captured Image</button>

    <div id="result" class="result"></div>
    <img id="preview" src="" alt="">
  </div>

  <script>
    const wasteData = {
      "banana": { category: "Biodegradable", class: "biodegradable" },
      "plastic": { category: "Recyclable", class: "recyclable" },
      "glass": { category: "Recyclable", class: "recyclable" },
      "battery": { category: "Hazardous", class: "hazardous" },
      "paper": { category: "Recyclable", class: "recyclable" },
      "food": { category: "Biodegradable", class: "biodegradable" },
      "styrofoam": { category: "General Waste", class: "general" }
    };

    function identifyWaste() {
      const input = document.getElementById("itemInput").value.toLowerCase();
      showResult(input);
    }

    function previewImage(event) {
      const preview = document.getElementById("preview");
      preview.src = URL.createObjectURL(event.target.files[0]);
    }

    function previewCameraImage(event) {
      const preview = document.getElementById("preview");
      preview.src = URL.createObjectURL(event.target.files[0]);
    }

    function identifyFromImage() {
      const fileInput = document.getElementById("imageInput");
      if (fileInput.files.length === 0) {
        alert("Please upload an image.");
        return;
      }
      const fileName = fileInput.files[0].name.toLowerCase();
      checkWasteFromFile(fileName);
    }

    function identifyFromCamera() {
      const fileInput = document.getElementById("cameraInput");
      if (fileInput.files.length === 0) {
        alert("Please capture an image.");
        return;
      }
      const fileName = fileInput.files[0].name.toLowerCase();
      checkWasteFromFile(fileName);
    }

    function checkWasteFromFile(fileName) {
      let matchedKey = Object.keys(wasteData).find(key => fileName.includes(key));
      if (matchedKey) {
        showResult(matchedKey);
      } else {
        showResult("unknown");
      }
    }

    function showResult(key) {
      const resultDiv = document.getElementById("result");
      if (wasteData[key]) {
        resultDiv.innerHTML = ${key} ‚Üí ${wasteData[key].category};
        resultDiv.className = result ${wasteData[key].class};
      } else {
        resultDiv.innerHTML = "Item not found in database. Please try another.";
        resultDiv.className = "result general";
      }
    }
  </script>
